<section>

     <h3>Movie</h3>
     <div class="product-list">
          {{#each filteredProduct}}
          <div class="products">
               <a href="/products/{{this.id}}">Edit</a>
               <a href="/products/{{this.id}}?method=delete">Delete</a>
               <a href="/products/productDetail/{{this.id}}">
                    <div class="movieTitle">{{this.title}}</div>
                    <img src="/uploads/{{this.sPic}}" alt="pic">
               </a>
          </div>

          {{/each}}
     </div>
</section>